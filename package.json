{
  "name": "aiden-v2-desktop",
  "version": "0.1.0",
  "description": "AIDEN v2 Desktop - AI Development Environment & Navigator",
  "main": "dist-electron/main/index.js",
  "author": "Kylian Migot <kylianmigot@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "tsc && vite build && npm run build:electron",
    "build:electron": "tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "typecheck:electron": "tsc --noEmit -p tsconfig.electron.json",
    "prisma:generate": "prisma generate --schema=prisma/schema.prisma",
    "prisma:push": "prisma db push --schema=prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=prisma/schema.prisma",
    "package": "electron-builder --config electron-builder.yaml",
    "package:mac": "electron-builder --mac --config electron-builder.yaml",
    "package:win": "electron-builder --win --config electron-builder.yaml",
    "package:linux": "electron-builder --linux --config electron-builder.yaml"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "@tanstack/react-query": "^5.66.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@tailwindcss/vite": "^4.0.7",
    "@types/node": "^22.13.4",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^33.4.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.20.0",
    "jsdom": "^28.1.0",
    "postcss": "^8.5.2",
    "prisma": "^6.4.1",
    "tailwindcss": "^4.0.7",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "wait-on": "^8.0.3"
  }
}
