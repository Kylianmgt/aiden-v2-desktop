{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist-electron",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "paths": {
      "@electron/*": ["./electron/*"]
    }
  },
  "include": ["electron/**/*.ts"],
  "exclude": ["node_modules", "dist", "src"]
}
